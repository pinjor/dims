# DIMS Docker Environment Configuration
# Copy this file to .env and update the values as needed

# Database Configuration
POSTGRES_DB=dims_db
POSTGRES_USER=dims_user
POSTGRES_PASSWORD=dims_password
POSTGRES_INITDB_ARGS=--encoding=UTF-8

# pgAdmin Configuration
PGADMIN_DEFAULT_EMAIL=admin@dims.com
PGADMIN_DEFAULT_PASSWORD=admin123
PGADMIN_CONFIG_SERVER_MODE=False

# Application Ports
APP_PORT=3000
POSTGRES_PORT=5432
PGADMIN_PORT=8080
REDIS_PORT=6379

# Network Configuration
NETWORK_NAME=dims_network

# Volume Names
POSTGRES_VOLUME=postgres_data
PGADMIN_VOLUME=pgadmin_data
REDIS_VOLUME=redis_data

# Development Settings
DEBUG=true
LOG_LEVEL=info

# API Configuration (if backend is added later)
API_BASE_URL=http://localhost:8080
API_TIMEOUT=30000

# Security Settings
JWT_SECRET=your_jwt_secret_key_here
ENCRYPTION_KEY=your_encryption_key_here
